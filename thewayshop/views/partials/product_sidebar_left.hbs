<div class="col-xl-3 col-lg-3 col-sm-12 col-xs-12 sidebar-shop-left">
    <div class="product-categori">
        <div class="search-product">
            <form action="#">
                <input class="form-control" placeholder="Search here..." type="text">
                <button type="submit"> <i class="fa fa-search"></i> </button>
            </form>
        </div>
        <div class="filter-sidebar-left">
            <div class="title-left">
                <h3>Categories</h3>
            </div>
            <div class="list-group list-group-collapse list-group-sm list-group-tree" id="list-group-men" data-children=".sub-men">
                {{#each categories}}
                <div class="list-group-collapse sub-men">
                    <a class="list-group-item list-group-item-action" href="/product/category/{{this.id}}" data-toggle="collapse" aria-expanded="true" aria-controls="sub-men1">{{this.name}} <small class="text-muted">({{this.tags.length}})</small>
                </a>
                    <div class="collapse show" id="sub-men{{this.id}}" data-parent="#list-group-men">
                        <div class="list-group">
                            {{#each this.tags}}
                            <a href="/product/tag/{{this.id}}" class="list-group-item list-group-item-action">{{this.name}}</a>
                            {{/each}}
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="filter-price-left">
            <div class="title-left">
                <h3>Price</h3>
            </div>
            <div class="price-box-slider">
                <div id="slider-range"></div>
                <p>
                    <input type="text" id="amount" readonly style="border:0; color:#fbb714; font-weight:bold;">
                    <button class="btn hvr-hover" type="submit">Filter</button>
                </p>
            </div>
        </div>
        <div class="filter-brand-left">
            <div class="title-left">
                <h3>Brand</h3>
            </div>
            <div class="brand-box">
                <ul>
                    {{#each brands}}
                    <li>
                        <div class="radio radio-danger">
                            <input name="survey" id="Radios1" value="Yes" type="radio">
                            <label for="Radios1"> {{this.brand}} </label>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>

    </div>
</div>