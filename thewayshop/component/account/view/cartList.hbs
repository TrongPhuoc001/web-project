<!-- Start Cart  -->
<div class="cart-box-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                
                <div class="table-main table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Images</th>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th>Remove</th>
                            </tr>
                        </thead>
                        <tbody id="cart-container">
                            <tr>
                                <td></td>
                                <td></td>
                                <td>
                                    <div id="loader" style="">
                                         <div class="clock-loader"></div>
                                    </div>
                                </td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row my-5">
            <div class="col-lg-6 col-sm-6">
                <div class="coupon-box">
                    <div class="input-group input-group-sm">
                        <input class="form-control" placeholder="Enter your coupon code" aria-label="Coupon code" type="text">
                        <div class="input-group-append">
                            <button class="btn btn-theme" type="button">Apply Coupon</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-sm-6">
                <div class="update-box">
                    <input value="Update Cart" type="submit">
                </div>
            </div>
        </div>

        <div class="row my-5">
            <div class="col-lg-8 col-sm-12"></div>
            <div class="col-lg-4 col-sm-12">
                <div class="order-box" id="order-summary">
                    <h3>Order summary</h3>
                    <div class="d-flex">
                        <h4>Sub Total</h4>
                        <div class="ml-auto font-weight-bold"> $ 130 </div>
                    </div>
                    <div class="d-flex">
                        <h4>Discount</h4>
                        <div class="ml-auto font-weight-bold"> $ 40 </div>
                    </div>
                    <hr class="my-1">
                    <div class="d-flex">
                        <h4>Coupon Discount</h4>
                        <div class="ml-auto font-weight-bold"> $ 10 </div>
                    </div>
                    <div class="d-flex">
                        <h4>Tax</h4>
                        <div class="ml-auto font-weight-bold"> $ 2 </div>
                    </div>
                    <div class="d-flex">
                        <h4>Shipping Cost</h4>
                        <div class="ml-auto font-weight-bold"> Free </div>
                    </div>
                    <hr>
                    <div class="d-flex gr-total">
                        <h5>Grand Total</h5>
                        <div class="ml-auto h5"> $ 388 </div>
                    </div>
                    <hr> 
                </div>
            </div>
            <div class="col-12 d-flex shopping-box"><a href="checkout" class="ml-auto btn hvr-hover">Checkout</a> </div>
        </div>

    </div>
</div>
<!-- End Cart -->
{{#section 'script'}}
<script>
    const cart_container = document.querySelector('#cart-container');
    const order_summary = document.querySelector('#order-summary');

    $('document').ready(()=>{
        let cart;
        if(user_id){
            cart = window.localStorage.user_cart;
        }
        else{
            cart = window.localStorage.cart;
        }
        cart = JSON.parse(cart);
        updateView(cart);
    })




    function updateView(data){
        cart_container.innerHTML='';
        let total = 0;
        data.forEach(cart=>{
            const tr =`<tr>
                            <td class="thumbnail-img">
                                <a href="/product/${cart.id}">
                            <img class="img-fluid" src="${cart.image}" alt="" />
                        </a>
                            </td>
                            <td class="name-pr">
                                <a href="/prodcuct/${cart.id}">
                            ${cart.title}
                        </a>
                            </td>
                            <td class="price-pr">
                                <p>$ ${cart.price}</p>
                            </td>
                            <td class="quantity-box"><input type="number" size="4" value="${cart.quantity}" min="0" step="1" class="c-input-text qty text"></td>
                            <td class="total-pr">
                                <p>$ ${Math.round(cart.price*cart.quantity*100)/100}</p>
                            </td>
                            <td class="remove-pr">
                                <i class="fas fa-times cart-remove" data-id=${cart.id} style="cursor:pointer;"></i>
                            </td>
                        </tr>`;
            console.log(Math.round(cart.price*cart.quantity*100));
            total += Math.round(cart.price*cart.quantity*100)/100;
            cart_container.innerHTML+=tr;
        })
        total = Math.round(total*100)/100;
        let tax = Math.round(total*100*0.02)/100;
        let granTotal = Math.round((total+tax)*100)/100;
        const orderSummaaryHTML = `<h3>Order summary</h3>
                    <div class="d-flex">
                        <h4>Sub Total</h4>
                        <div class="ml-auto font-weight-bold"> $ ${total} </div>
                    </div>
                    <div class="d-flex">
                        <h4>Discount</h4>
                        <div class="ml-auto font-weight-bold"> $ 0 </div>
                    </div>
                    <hr class="my-1">
                    <div class="d-flex">
                        <h4>Coupon Discount</h4>
                        <div class="ml-auto font-weight-bold"> $ 0 </div>
                    </div>
                    <div class="d-flex">
                        <h4>Tax(2%)</h4>
                        <div class="ml-auto font-weight-bold"> $ ${tax} </div>
                    </div>
                    <div class="d-flex">
                        <h4>Shipping Cost</h4>
                        <div class="ml-auto font-weight-bold"> Free </div>
                    </div>
                    <hr>
                    <div class="d-flex gr-total">
                        <h5>Grand Total</h5>
                        <div class="ml-auto h5"> $ ${granTotal} </div>
                    </div>
                    <hr> `;
        document.querySelector('#order-summary').innerHTML=orderSummaaryHTML;
        add_remove_cart_event();
    }
    function cartRemoveHandler(e){
        let cart = window.localStorage.cart;
        const pro_id = e.target.dataset.id;
        if(user_id){
            cart = window.localStorage.user_cart;
            cart = JSON.parse(cart);
            $.ajax({
                url:'/api/account/cart',
                type:'DELETE',
                contentType: 'application/json',
                data: JSON.stringify({
                    user_id:user_id,
                    pro_id:pro_id
                }),
                dataType: 'json',
                success: function(data){
                    window.localStorage.setItem('user_cart',JSON.stringify(cart));
                    cart = cart.filter(c=>c.id!=pro_id);
                },
            })
        }
        else{
            cart = JSON.parse(cart);
            cart = cart.filter(c=>c.id!=pro_id);
            window.localStorage.setItem('cart',JSON.stringify(cart));
        }
        updateView(cart)
        updateCartBar()
    }
    function add_remove_cart_event(){
        document.querySelectorAll('.cart-remove').forEach(i=>{
            i.addEventListener('click',cartRemoveHandler);
        })
    }
</script>
{{/section}}