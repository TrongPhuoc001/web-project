<div class="container px-1 px-md-4 py-5 mx-auto" id="order-container">
    {{#each data}}
    <div class="card">
        <div class="row d-flex justify-content-between px-3 top">
            <div class="d-flex">
                <h5>Mã đơn hàng: <span class="text-primary font-weight-bold">{{this.id}}</span></h5>
            </div>
            <div class="d-flex flex-column text-sm-right">
                <p class="mb-0">Địa chỉ giao hàng : <span>{{this.address}}</span></p>
                <p>Email liên hệ: <span class="font-weight-bold">{{this.email}}</span></p>
            </div>
        </div> <!-- Add class 'active' to progress -->
        <div class="row d-flex justify-content-center">
            <div class="col-12">
                <ul id="progressbar" class="text-center">
                    <li class="active step0"></li>
                    <li class="active step0"></li>
                    <li class="step0"></li>
                </ul>
            </div>
        </div>
        <div class="row justify-content-between top" >
            <div class="row d-flex icon-content"> <img class="icon" src="https://i.imgur.com/9nnc9Et.png">
                <div class="d-flex flex-column">
                    <p class="font-weight-bold">Order<br>Processed</p>
                </div>
            </div>
            <div class="row d-flex icon-content"> <img class="icon" src="https://i.imgur.com/u1AzR7w.png">
                <div class="d-flex flex-column">
                    <p class="font-weight-bold">Order<br>Shipped</p>
                </div>
            </div>
            <div class="row d-flex icon-content"> <img class="icon" src="https://i.imgur.com/HdsziHP.png">
                <div class="d-flex flex-column">
                    <p class="font-weight-bold">Order<br>Arrived</p>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
<div style="text-align: center;">
    <a id="load-more" class="btn btn-warning" data-abc="true"> <i class="fa fa-chevron-right"></i> Load more</a>
</div>
{{#section "script"}}
<script>
    // ajax load more 
    let curr_page = {{{page}}}
    $('document').ready(()=>{
        $.ajax({
            type: "get",
            url: `/api/account/get_infor_order/${user_id}?page=${curr_page}`,
            dataType: 'json',
            success: function (infors) {
                console.log('aaa', infors)
                appendInfor(infors)
            }
        })
    })
    function get_inforOrder() {
        $.ajax({
            type: "get",
            url: `/api/account/get_infor_order/${user_id}?page=${curr_page+1}`,
            dataType: 'json',
            success: function (infors) {
                console.log('aaa', infors)
                curr_page++;
                appendInfor(infors)
            }
        })
    }
    document.querySelector('#load-more').addEventListener('click',get_inforOrder);
    function appendInfor(infors) {
        let html = '';
        $.each(infors, function (index, infor) {
            let lis='';
            for (let i =0;i<3;i++) {
                if ( i<=parseInt(infor.state) ){
                    lis +=`<li class="active step0"></li>`;
                }
                else{
                    lis +=`<li class="step0"></li>`;
                }
            }
            console.log('abc');
            html+=`<div class="card">
                    <div class="row d-flex justify-content-between px-3 top">
                        <div class="d-flex">
                            <h5>Mã đơn hàng: <span class="text-primary font-weight-bold">${infor.id}</span></h5>
                        </div>
                        <div class="d-flex flex-column text-sm-right">
                            <p class="mb-0">Địa chỉ giao hàng : <span>${infor.address}</span></p>
                            <p>Email liên hệ: <span class="font-weight-bold">${infor.email}</span></p>
                        </div>
                    </div> 
                    <div class="row d-flex justify-content-center">
                        <div class="col-12">
                            <ul id="progressbar" class="text-center">
                                ${lis}
                            </ul>
                        </div>
                    </div>
                    <div class="row justify-content-between top" style="width: 50%;margin-left: 13%;">
                        <div class="row d-flex icon-content"> <img class="icon" src="https://i.imgur.com/9nnc9Et.png">
                            <div class="d-flex flex-column">
                                <p class="font-weight-bold">Order<br>Processed</p>
                            </div>
                        </div>
                        <div class="row d-flex icon-content"> <img class="icon" src="https://i.imgur.com/u1AzR7w.png">
                            <div class="d-flex flex-column">
                                <p class="font-weight-bold">Order<br>Shipped</p>
                            </div>
                        </div>
                        <div class="row d-flex icon-content"> <img class="icon" src="https://i.imgur.com/HdsziHP.png">
                            <div class="d-flex flex-column">
                                <p class="font-weight-bold">Order<br>Arrived</p>
                            </div>
                        </div>
                    </div>
                </div>`;
        });

        $('#order-container').append(html);

    }
</script>
{{/section}}