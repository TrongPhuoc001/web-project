{{#section 'style'}}
<style>
    input[type="file"] {
        display: none;
    }
    .custom-file-upload {
        border: 1px solid #ccc;
        display: inline-block;
        padding: 6px 12px;
        cursor: pointer;
    }
</style>
{{/section}}
<section id="main-content">
    <section class="wrapper">
        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <div class="row">
                        <div class="col-sm-4">
                            <h4 class="mb"><i class="fa fa-angle-right"></i> {{product.title}}</i></h4>
                        </div>
                        {{#if message}}
                        <i class="fa fa-angle-left"></i>{{message}}<i class="fa fa-angle-right"></i>
                        <a href="/product/{{new_pro_id}}">View</a>
                        {{/if}}
                        {{#if error}}
                        <i class="fa fa-angle-left"></i>{{error}}<i class="fa fa-angle-right"></i>
                        {{/if}}
                    </div>
                    <form class="form-horizontal style-form" method="post" id="add-form">
                        {{#each product}}
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">{{@key}}</label>
                            {{#ifeq @key 'image'}} 
                            <div class="col-sm-2">
                                <label for="inp" class="custom-file-upload">Main image</label>
                                <input type="file" id="inp" accept="image/png, image/jpeg, image/jpg"  >                               
                                <input type="hidden" id="inp-value" name="image" required>
                            </div>
                            <div class="col-sm-1">
                                <img id="img" width="100">
                            </div>
                            <div class="col-sm-2">
                                <label for="sinp1" class="custom-file-upload">Sub image 1</label>
                                <input type="file" id="sinp1" accept="image/png, image/jpeg, image/jpg"  >                               
                                <input type="hidden" id="sinp1-value" name="subimage1" required>
                            </div>
                            <div class="col-sm-1">
                                <img id="simg1" width="100">
                            </div>
                            <div class="col-sm-2">
                                <label for="sinp2" class="custom-file-upload">Sub image 2</label>
                                <input type="file" id="sinp2" accept="image/png, image/jpeg, image/jpg"  >                               
                                <input type="hidden" id="sinp2-value" name="subimage2" required>
                            </div>
                            <div class="col-sm-1">
                                <img id="simg2" width="100">
                            </div>
                            {{else}}
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="{{@key}}" placeholder="{{this}}" required >
                            </div>
                            {{/ifeq}}
                        </div>
                        {{/each}}
                        <button type="button" id="btn-add">Add</button>
                    </form>
                </div>
            </div><!-- col-lg-12-->      	
        </div><!-- /row -->
    </section><! --/wrapper -->
</section><!-- /MAIN CONTENT -->
{{#section 'script'}}
<script>
    async function getUrl(){
        if(!document.getElementById("inp-value").value||!document.getElementById("sinp1-value").value||!document.getElementById("sinp2-value").value){
            document.getElementById("inp").focus();
            document.getElementById("sinp1").focus();
            document.getElementById("sinp2").focus();
            return;
        }
        const FR= new FileReader();                                    
        const form = new FormData();
        form.set('key','9304eb5630f3f1e2a368fa2ee7cf100f');
        form.set('image',document.getElementById("inp-value").value);
        const datamain = await fetch(`https://api.imgbb.com/1/upload?key=9304eb5630f3f1e2a368fa2ee7cf100f`,{
            method:'POST',
            body:form
        })
        .then(res => res.json());
        form.set('image',document.getElementById("sinp1-value").value);
        const datasub1 = await fetch(`https://api.imgbb.com/1/upload?key=9304eb5630f3f1e2a368fa2ee7cf100f`,{
            method:'POST',
            body:form
        })
        .then(res => res.json());
        form.set('image',document.getElementById("sinp2-value").value);
        const datasub2 = await fetch(`https://api.imgbb.com/1/upload?key=9304eb5630f3f1e2a368fa2ee7cf100f`,{
            method:'POST',
            body:form
        })
        .then(res => res.json());
        document.getElementById("inp-value").value = datamain.data.image.url;
        document.getElementById("sinp1-value").value = datasub1.data.image.url;
        document.getElementById("sinp2-value").value = datasub2.data.image.url;
        document.getElementById("add-form").submit();
    }
    function readFile() {
        if (this.files && this.files[0]) {                                 
            const FR= new FileReader();                                    
            FR.addEventListener("load", function(e) {
                document.getElementById("img").src = e.target.result;
                document.getElementById("inp-value").value = e.target.result.split(',')[1];
            });                                     
            FR.readAsDataURL( this.files[0] );
        }
    }
    function readFile1() {
        if (this.files && this.files[0]) {                                 
            const FR= new FileReader();                                    
            FR.addEventListener("load", function(e) {
                document.getElementById("simg1").src = e.target.result;
                document.getElementById("sinp1-value").value = e.target.result.split(',')[1];
            });                                     
            FR.readAsDataURL( this.files[0] );
        }
    }
    function readFile2() {
        if (this.files && this.files[0]) {                                 
            const FR= new FileReader();                                    
            FR.addEventListener("load", function(e) {
                document.getElementById("simg2").src = e.target.result;
                document.getElementById("sinp2-value").value = e.target.result.split(',')[1];
            });                                     
            FR.readAsDataURL( this.files[0] );
        }
    }
    document.getElementById("inp").addEventListener("change", readFile)
    document.getElementById("sinp1").addEventListener("change", readFile1)
    document.getElementById("sinp2").addEventListener("change", readFile2)
    document.getElementById("btn-add").addEventListener("click",getUrl)
</script>
{{/section}}