
<section id="main-content">
    <section class="wrapper">
        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb"><i class="fa fa-angle-right"></i> {{product.title}}</i>
                        {{#if message}}
                        <i class="fa fa-angle-left"></i>{{message}}<i class="fa fa-angle-right"></i>
                        {{/if}}
                    </h4>
                    <button class="btn btn-info"><a href="/product/delete/{{product.id}}">DELETE</a></button>
                    <form class="form-horizontal style-form" method="post">
                        {{#each product}}
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">{{@key}}</label>
                            {{#ifeq @key 'image'}}
                            <div class="col-sm-7">
                                <input type="text" class="form-control" name="{{@key}}" value="{{this}}">
                                {{#if ../sub_image}}
                                {{#each ../sub_image}}
                                <input type="text" class="form-control" name="subimage1" value="{{this.image}}">
                                {{/each}}
                                {{else}}
                                <span>Không có sub image</span>
                                {{/if}}
                            </div>
                            <img src="{{this}}" width="80">
                            {{#each ../sub_image}}
                            <img src="{{this.image}}" width="80">
                            {{/each}}
                            {{else}}
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="{{@key}}" value="{{this}}">
                            </div>
                            {{/ifeq}}
                        </div>
                        {{/each}}
                        <button type="submit">Submit</button>
                    </form>
                </div>
            </div><!-- col-lg-12-->      	
        </div><!-- /row -->
    </section><! --/wrapper -->
</section><!-- /MAIN CONTENT -->